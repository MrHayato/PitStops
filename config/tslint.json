{
    "extends": "tslint:recommended",
    "rules": {
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "arrow-parens": false,
        "variable-name": [
            true,
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "object-literal-sort-keys": [
            false
        ],
        "no-require-imports": true
    }
}