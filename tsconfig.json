{
    "compilerOptions": {
        "baseUrl": "src",
        "experimentalDecorators": true,
        "sourceMap": true,
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2017"
        ],
        "types": [
            "webpack-env",
            "node"
        ]
    },
    "exclude": [
        "node_modules/**"
    ]
}